public class HelloWorld{

     public static void main(String []args){
       
        int x = 40;
        int y = 20;
        int z = 10;
        
        boolean b1 = (x > y) && (x > z);
        System.out.println(b1);
        
        boolean b2 = (x > y) && (x < z);
        System.out.println(b2);
        
        boolean b3 = (x > y) || (x < z);
        System.out.println(b3);
        
        boolean b4 = (x < y) || (x < z);
        System.out.println(b4);
        

 public class HelloWorld{

     public static void main(String []args){
       
        int x = 10;
        int y = 20;
       
        boolean b1 = (x == y);
        System.out.println(b1);
        
        boolean b2 = (x != y);
        System.out.println(b2);
        
        boolean b4 = (x <= y);
        System.out.println(b4);
        
        boolean b5 = (x >= y);
        System.out.println(b5);
        
        boolean b6 = (x < y) | (x > y);
        System.out.println(b6);


// Task 6
Известныплощадикругаиквадрата. 
Определить: 1.уместитсяликругвквадрате? 
2.уместитсяликвадратвкруге?

public class HelloWorld{

     public static void main(String []args){
       
        double Skv = 100;
        double Skr = 200;
        
        double a = Math.sqrt(Skv); 
        double r = Math.sqrt(Skr) / Math.PI;
        
        boolean b1 = (r <= a / 2);
        boolean b2 = (a <= r * Math.sqrt(2));
        
        System.out.println ("Will a circle fit in a square?");
        System.out.println(b1);
        
        System.out.println ("Will a square fit in a circle?");
        System.out.println(b2);
        
        }

