// Task SR 5
Даны два числа. 
Если квадратный корень из второго числа меньше первого числа, то увеличить
второе число в пять раз.

public class HelloWorld{

    public static void main(String []args){
    
         int x = 8;
         int y = 6;
         
         if ( Math.sqrt(y) < x)
         {
         System.out.println(y * 5);
         }
         
         else
         {
         System.out.println("sqrt(y) more x");
         }
         
         
        }
}

// Task 12
Гражданин 1 марта открыл счет в банке, вложив 1000 руб. Через каждый месяц размер
вклада увеличивается на 2% от имеющейся суммы. Определить:
1. за какой месяц величина ежемесячного увеличения вклада превысит 30 руб.;
2. через сколько месяцев размер вклада превысит 1200 руб

public class HelloWorld{
    
    public static String ReturnMes(int CurrentMonth) {
        switch (CurrentMonth) {
            case 1:
                return "Jan";
            case 2:
                return "Feb";
            case 3:
                return "Mar";
            case 4:
                return "Apr";
            case 5:
                return "May";
            case 6:
                return "Jun";
            case 7:
                return "Jul";
            case 8:
                return "Aug";
            case 9:
                return "Sep";
            case 10:
                return "Okt";
            case 11:
                return "Nov";
            case 12:
                return "Dec";
            default:
                return "ERROR";
        }
    }
    
    public static String ReturnYear(int CurrentYear) {
        switch (CurrentYear) {
            case 0:
                return "current year";
            case 1:
                return "next year";
            case 2:
                return "in two years";
            default:
                return "ERROR";
        }
    }

     public static void main(String []args){
        int Vklad = 1000;
        int Month = 0;
        int Task1Month = 0;
        int Task1Year = 0;
        int CurrentMonth = 3;
        double Delta = 0;
        
        //Month = (int) Math.ceil(30 / (0.02*Vklad));
        
        
        while (Delta<=30) {
            Month = Month + 1;
            Delta = Delta + 0.02*Vklad;
        }


        Task1Month = ((CurrentMonth + Month)%12 == 0) ? 12 :  (CurrentMonth + Month)%12;
        
        Task1Year = ((CurrentMonth + Month)/12 > 0)&&(Task1Month==12) ? (CurrentMonth + Month)/12-1 :  (CurrentMonth + Month)/12;
        
        System.out.printf("The amount of percentage from the deposit will exceed 30rbl in %s  %s \n", ReturnMes(Task1Month),  ReturnYear(Task1Year));
        
        //double Task2 = (1200 - Vklad) / (0.02*Vklad);
        
        Delta = 1000;
        Month = 0;
        
        while (Delta<=1200) {
            Month = Month + 1;
            Delta = Delta + 0.02*Vklad;
            //System.out.println("" + Month + " Delta " + Delta);
        }
        
        
        //System.out.println("\n");
        System.out.println("The amount of the deposit will exceed 1200 rbl in " + Month);
     }
}
